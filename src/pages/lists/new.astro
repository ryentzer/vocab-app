---
import Nav from '../../components/Nav.astro';
import Head from '../../components/Head.astro';
import Foot from '../../components/Foot.astro';
---

<Head title="VocabUp — New List" />
<Nav />

<main class="max-w-2xl mx-auto px-6 py-10">
  <div class="mb-8">
    <a href="/lists" class="text-sm text-indigo-600 hover:underline">← My Lists</a>
    <h1 class="text-3xl font-bold text-gray-900 mt-3">Create a New List</h1>
  </div>

  <div class="bg-white rounded-2xl border border-gray-100 shadow-sm p-8">
    <div id="error-msg" class="hidden mb-4 bg-red-50 border border-red-200 text-red-700 rounded-xl px-4 py-3 text-sm"></div>

    <form id="create-form" class="space-y-5">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">List Name <span class="text-red-500">*</span></label>
        <input
          id="name"
          type="text"
          required
          maxlength="64"
          class="w-full px-4 py-2.5 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-300 text-sm"
          placeholder="e.g. Chapter 3 Vocab, GRE Prep, SAT Words…"
        />
      </div>
      <div>
        <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description <span class="text-gray-400 font-normal">(optional)</span></label>
        <textarea
          id="description"
          rows="3"
          maxlength="200"
          class="w-full px-4 py-2.5 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-300 text-sm resize-none"
          placeholder="What is this list for?"
        ></textarea>
      </div>
      <div class="flex gap-3">
        <button
          type="submit"
          id="submit-btn"
          class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2.5 rounded-xl transition-colors text-sm"
        >
          Create List
        </button>
        <a href="/lists" class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold px-6 py-2.5 rounded-xl transition-colors text-sm">
          Cancel
        </a>
      </div>
    </form>
  </div>
</main>

<script>
  const form = document.getElementById('create-form') as HTMLFormElement;
  const errorMsg = document.getElementById('error-msg') as HTMLDivElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    errorMsg.classList.add('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Creating…';

    const name = (document.getElementById('name') as HTMLInputElement).value;
    const description = (document.getElementById('description') as HTMLTextAreaElement).value;

    try {
      const res = await fetch('/api/lists', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name, description: description || undefined }),
      });

      if (res.ok) {
        const list = await res.json();
        window.location.href = `/lists/${list.id}`;
      } else {
        const data = await res.json();
        errorMsg.textContent = data.error ?? 'Failed to create list';
        errorMsg.classList.remove('hidden');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Create List';
      }
    } catch {
      errorMsg.textContent = 'Network error. Please try again.';
      errorMsg.classList.remove('hidden');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Create List';
    }
  });
</script>

<Foot />
